<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".daktari.PaymentType">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/singin_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT PAYMENT TYPE"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:id="@+id/Payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/hrs"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="MPESA"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/radio_selector_mpesa"
                android:textColor="@drawable/radio_text_mpesa"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="20dp"
                android:elevation="6dp"
                />

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="VISA/MASTERCARD"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@drawable/radio_text_selector_visa"
                android:background="@drawable/radio_selector_visa"
                android:elevation="6dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"/>
            <RadioButton
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="INSURANCE"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@drawable/radio_text_selector_insurance"
                android:background="@drawable/radio_selector_insu"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:elevation="6dp" />


        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Confirm Appointment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>