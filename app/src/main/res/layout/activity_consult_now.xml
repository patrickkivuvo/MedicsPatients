<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".daktari.ConsultNow">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/singin_top"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="#0099CC"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_marginTop="35dp"
        android:text="Consult Now"
        android:textColor="?attr/colorOnPrimaryFixed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        tools:targetApi="s" />
    <ImageView
        android:id="@+id/Notifications"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        app:srcCompat="@drawable/baseline_notifications_24" />


    <ImageView
        android:id="@+id/Messages"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/baseline_message_24"/>

    <SearchView
        android:id="@+id/idSV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:iconifiedByDefault="false"
        android:padding="4dp"
        android:queryHint="Search by Doctor or Specialization"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/search" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="14dp"
        android:text="General Practitioner"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:shapeAppearanceOverlay="@style/Button3"
        android:backgroundTint="#21005D" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:text="Specialists/ Consultants"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:shapeAppearanceOverlay="@style/Button3"
        android:backgroundTint="#21005D" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="14dp"
        android:text="Counselling Psychologists"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:shapeAppearanceOverlay="@style/Button3"
        android:backgroundTint="#21005D" />


    <Button
        android:id="@+id/btn6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="400dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:text="Nutritional Counselling"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:shapeAppearanceOverlay="@style/Button3"
        android:backgroundTint="#21005D" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0099CC"
        android:contextClickable="true"
        android:clickable="true"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="45dp"
        android:contentDescription="TODO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/baseline_add_24"
        android:focusable="true" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:background="#2971C4"
        app:menu="@menu/bottom_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>