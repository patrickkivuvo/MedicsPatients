<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daktari2.WaitingRoom">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/singin_top"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="#0099CC"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:text="Waiting Room"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        tools:targetApi="s" />


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="3"
        android:layout_marginTop="150dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/switch_tumbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/New"
            android:text="On-Demand"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:background="@drawable/switch_trcks"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Scheduled"
            android:text="Queued"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="#21005D"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/SelfMonitoring"
            android:text="Sessions"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="#21005D"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/NewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#86D4ED">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/doctor1"/>

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Dr. Peter "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="100dp"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="20sp"
                android:layout_marginEnd="1dp"
                android:textAlignment="center"
                app:shapeAppearanceOverlay="@style/Button5"
                android:backgroundTint="#21005D"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#21005D"
                android:text="View Description"
                android:textAlignment="center"
                android:textSize="20sp"
                app:shapeAppearanceOverlay="@style/Button5" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ScheduledLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#86D4ED">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/doctor1"/>

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Dr. Patrick "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="100dp"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clerk"
                android:textSize="20sp"
                android:layout_marginEnd="1dp"
                android:textAlignment="center"
                app:shapeAppearanceOverlay="@style/Button5"
                android:backgroundTint="#21005D"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#21005D"
                android:text="View Profile"
                android:textAlignment="center"
                android:textSize="20sp"
                app:shapeAppearanceOverlay="@style/Button5" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/sessionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#86D4ED">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/doctor1"/>

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Dr. Patrick "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="100dp"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/Clerk"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Resume Session"
                android:textSize="20sp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:shapeAppearanceOverlay="@style/Button5"
                android:backgroundTint="#21005D"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                />

            <Button
                android:id="@+id/Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#21005D"
                android:text="View Full Description"
                android:textAlignment="center"
                android:textSize="20sp"
                app:shapeAppearanceOverlay="@style/Button5" />
        </RelativeLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0099CC"
        android:contextClickable="true"
        android:clickable="true"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="45dp"
        android:contentDescription="TODO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/baseline_add_24"
        android:focusable="true" />


</RelativeLayout>