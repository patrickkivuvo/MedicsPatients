<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".daktari.Nutritionists">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/singin_top"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="#0099CC"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:text="Nutritionists"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        tools:targetApi="s" />

    <SearchView
        android:id="@+id/idSV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:iconifiedByDefault="false"
        android:padding="4dp"
        android:queryHint="Search by Clinic or Doctor or Speciality"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/search" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#CCC8C8"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#CCC8C8"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/baseline_sort_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="155dp"
        android:text="SORT BY"
        android:textColor="#2971C4"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="147dp"
        app:srcCompat="@drawable/baseline_info_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="60dp"
        android:text="MORE FILTERS"
        android:textAlignment="center"
        android:textColor="#2971C4"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/baseline_sort_24" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/baseline_info_24" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/switch_tumbsdoctors"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/doctor1"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Top Nutritionists, Himalia's health beacon shines. "
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textdo"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:text="Consult Now"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/switch_tumbsdoctors1"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="View Profile"
            android:textColor="@color/primary"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/switch_tumbsdoctors"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/doctor"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Best Nutritionists officers thrive at Himalia. "
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textdo1"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:text="Consult Now"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/switch_tumbsdoctors1"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="View Profile"
            android:textColor="@color/primary"
            android:textSize="15sp" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0099CC"
        android:contextClickable="true"
        android:clickable="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="25dp"
        android:contentDescription="TODO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/baseline_add_24"
        android:focusable="true" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:background="#2971C4"
        app:menu="@menu/bottom_nav">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>